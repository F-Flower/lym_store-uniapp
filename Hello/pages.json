{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"app-plus": {
					"titleNView": {
						"backgroundColor": "#eee",
						//顶部搜索框
						"searchInput": {
							"placeholder": "请输入搜索内容",
							"disabled": true,
							"align": "center"
						},
						// 左右两边图标按钮
						"buttons": [{
								"float": "left",
								"fontSize": "20px",
								// 使用字体图标必须'\u'开头
								"text": "\ue67a",
								// 使用字体图标的文件路径，只能是本地地址
								"fontSrc": "static/font/iconfont.ttf",
								"width": "30px"
							},
							{
								"float": "right",
								"fontSize": "20px",
								"text": "\ue661",
								"fontSrc": "static/font/iconfont.ttf",
								"width": "30px"
							}
						]
					}
				}
			}
		},
		{
			"path": "pages/cart/cart",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/cate/cate",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/mine/mine",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}
		}, {
			"path": "pages/search/search",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}
		}
	],
	// 底部tabBar部分
	"tabBar": {
		"color": "#333",
		"selectedColor": "#f60",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
			"pagePath": "pages/index/index",
			"iconPath": "static/tabbar/index.png",
			"selectedIconPath": "static/tabbar/indexSelected.png",
			"text": "首页"
		}, {
			"pagePath": "pages/cate/cate",
			"iconPath": "./static/tabbar/class.png",
			"selectedIconPath": "static/tabbar/classSelected.png",
			"text": "分类"
		}, {
			"pagePath": "pages/cart/cart",
			"iconPath": "./static/tabbar/cart.png",
			"selectedIconPath": "static/tabbar/cartSelected.png",
			"text": "购物车"
		}, {
			"pagePath": "pages/mine/mine",
			"iconPath": "./static/tabbar/my.png",
			"selectedIconPath": "static/tabbar/mySelected.png",
			"text": "我的"
		}],
		// 中间按钮 仅在 list 项为偶数时有效(小程序端不显示)
		"midButton": {
			"text": "平台",
			"iconPath": "./static/tabbar/middle.png",
			"iconWidth": "60px",
			"height": "75px"
		}
		// 注意：midButton没有pagePath，需监听点击事件，自行处理点击后的行为逻辑。监听点击事件为调用API：uni.onTabBarMidButtonTap
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "Lym-shop",
		// 导航栏背景颜色
		"navigationBarBackgroundColor": "#F8F8F8",
		// 下拉时显示出来的窗口的背景颜色
		"backgroundColor": "#F8F8F8"
	}
}
